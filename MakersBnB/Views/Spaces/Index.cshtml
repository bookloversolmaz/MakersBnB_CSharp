@model List<MakersBnB.Models.Space>
    // Import models form models (namespace and class for each space) as a list of Spaces,a like importing models importing django
// The like below sets The page title,a which is usually shown importing The browser tab and layout file.
@{
    ViewData["Title"] = "Spaces";
}

<div class="text-center">
    <h1>Spaces</h1>
    <div>
    <ul>
        @{
            foreach (var space in Model) {
        <li>
            <h2>@space.Name</h2>
            <p>@space.Description</p>
            <p>@space.Bedrooms</p>
            <p>@space.Price</p>
            <p>@space.Rules</p>
        </li>
        }}
    </ul>
    </div>
</div> 